{
  "name": "boilerplate-helper",
  "version": "0.16.24",
  "author": "github/TheLucasAnderson",
  "description": "A boilerplate for React projects with Typescript and Vite",
  "license": "MIT",
  "bin": {
    "boilerplate-helper": "./clone-repository.js"
  },
  "scripts": {
    "build": "vite build",
    "commit": "cz",
    "coverage": "vitest run --coverage",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "vite",
    "test": "vitest --run",
    "prepare": "husky install",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@testing-library/jest-dom": "6.6.3",
    "axios": "1.7.9",
    "graphql": "16.10.0",
    "i18next": "24.0.5",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-i18next": "15.1.3",
    "react-router-dom": "6.28.0",
    "styled-components": "6.1.13"
  },
  "devDependencies": {
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.2.0",
    "@types/react": "18.3.12",
    "@types/react-dom": "18.3.1",
    "@types/styled-components": "5.1.34",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "@vitejs/plugin-react": "4.3.4",
    "@vitest/coverage-v8": "1.6.0",
    "commitizen": "4.3.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-react": "7.37.4",
    "eslint-plugin-react-hooks": "4.6.2",
    "husky": "^9.1.7",
    "jsdom": "26.0.0",
    "msw": "2.6.5",
    "prettier": "3.4.2",
    "typescript": "5.7.3",
    "vite": "5.4.12",
    "vite-plugin-eslint": "1.8.1",
    "vitest": "1.6.1"
  },
  "files": [
    "src/**/*",
    "*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TheLucasAnderson/boilerplate-helper"
  },
  "keywords": [
    "boilerplate",
    "react",
    "vite",
    "typescript",
    "styledcomponent"
  ],
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  }
}
